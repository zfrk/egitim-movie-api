{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "prettier",
        "airbnb-base"
      ],
    "plugins": [
        "prettier"
      ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
      },
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": 
        {
            "impliedStrict":true             
        }
    },
    "rules": {
        "prefer-const":"error",
        "prettier/prettier": "error",
        "comma-dangle":"off",
        "no-console":"off"
    }
}
